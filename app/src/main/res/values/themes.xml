        <item name="colorSecondaryVariant">@color/pink_main</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <!-- Splash screen theme -->
    <style name="Theme.BeMyHome.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
