<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/pink_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/pink_main"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/ivAdminUserAsistPImage"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvAdminUserAsistDni"
                style="@style/WhiteSemibold12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAllCaps="true"
                android:text="20190981"/>
            <TextView
                android:id="@+id/tvAdminUserAsistNombre"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:lines="2"
                android:text="Oliver Bustamente"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="end">

                <Button
                    android:id="@+id/btnAdminUserAsistActualizar"
                    style="@style/BtnBlue"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Actualizar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>