<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/pink_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:background="@color/pink_main"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/ivAdopAdopcionesCardImage"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_placeholder"
                android:scaleType="fitCenter"
                android:layout_marginEnd="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAdopAdopcionesCardNombre"
                    style="@style/WhiteSemiBoldSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Daenerys"/>
                <TextView
                    android:id="@+id/tvAdopAdopcionesCardFecha"
                    style="@style/WhiteMedium14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="16dp"
                    android:text="Realizada el 31 Octubre de 2022"/>
                <TextView
                    android:id="@+id/tvAdopAdopcionesCardEstadoSolicitud"
                    style="@style/WhiteSemibold16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="16dp"
                    android:text="Solicitud rechazada"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:background="@color/pink_main"
            android:layout_gravity="center_vertical">
            <Button
                android:textAlignment="center"
                android:id="@+id/btnCAdopAdopcionesCardDetalle"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_marginVertical="0dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:text="Detalle"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>