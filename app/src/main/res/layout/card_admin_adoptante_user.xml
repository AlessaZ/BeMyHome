<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/pink_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/pink_main"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/ivAdminUserAdptPImage"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_placeholder"
            android:scaleType="fitCenter"
            android:layout_marginEnd="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvAdminUserAsistDni"
                style="@style/WhiteSemibold12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="20190981"/>
            <TextView
                android:id="@+id/tvAdminUserAdptNombre"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="5dp"
                android:lines="2"
                android:text="Oliver Bustamente"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAdminUserAdptTelefono"
                    app:tint="@color/white"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tvAdminUserAdptTelefono"
                    style="@style/WhiteSemibold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="20190981"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>